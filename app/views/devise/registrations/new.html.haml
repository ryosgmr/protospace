= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'container user-new'}) do |f|
  = devise_error_messages!
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Register
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name, placeholder: "Username"
          .user-image.col-md-2
            %button.btn.btn-primary Add image
            %input{type: "file"}/
        = f.email_field :email, class: "user-email", placeholder: "E-Mail"
        = f.password_field :password, class: "user-password", placeholder: "Password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member_of, placeholder: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, placeholder: "Profile", size: "30x4"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, placeholder: "Works", size: "30x4"
    .row.text-center.user-btn
      = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
